generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id              Int      @id @unique @default(autoincrement())
  author          String
  title           String
  description     String
  content         String
  imageUrl        String   @default("https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D")
  tags            String[]
  readingTime     Int
  readingTimeUnit String
  published       Boolean  @default(false)
}
